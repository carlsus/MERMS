@model MERMS.ViewModels.MultiForestProtectionViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="TrackingNo" class="control-label"></label>
                <input asp-for="TrackingNo" class="form-control" />
                <span asp-validation-for="TrackingNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfMeeting" class="control-label"></label>
                <input asp-for="DateOfMeeting" class="form-control" />
                <span asp-validation-for="DateOfMeeting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueOfMeeting" class="control-label"></label>
                <input asp-for="VenueOfMeeting" class="form-control" />
                <span asp-validation-for="VenueOfMeeting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfAttendees" class="control-label"></label>
                <input asp-for="NumberOfAttendees" class="form-control" />
                <span asp-validation-for="NumberOfAttendees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Letter of Inviation</label>
                <div class="custom-file">
                    <input asp-for="LetterOfInvitation" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="LetterOfInvitation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Attendance Sheet</label>
                <div class="custom-file">
                    <input asp-for="AttendanceSheet" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="AttendanceSheet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Minutes of Meeting</label>
                <div class="custom-file">
                    <input asp-for="MinutesOfMeeting" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="MinutesOfMeeting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Photo Documentation</label>
                <div class="custom-file">
                    <input asp-for="PhotoDocumentation" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="PhotoDocumentation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(".custom-file-input").on("change", function() {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
}
